<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymapkit">

    <!--Определяем доступ к интернету-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--Определяем доступ к точному местоположению-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!--Определяем расположение курса доступа к разрешениям-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!--Определяем доступ к сети-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyMapKit">
        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Menu"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>
        <activity
            android:name=".SecondActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>
        <activity
            android:name=".Third_Activity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>
        <activity
            android:name=".Museum_Point"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.GADGET" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Restaurant_Point"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.GADGET" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Roude_1_Petropavlovka"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.GADGET" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Route_2_Nevsky"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.GADGET" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Route_3_Pushkin"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.GADGET" />
            </intent-filter>
        </activity>
    </application>


</manifest>